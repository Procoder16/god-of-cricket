<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#212F3D">
    
    <TextView
        android:id="@+id/god-of-cricket"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="GOD OF CRICKET"
        android:textSize="50sp"
        android:textAlignment="center"
        android:layout_marginTop="26sp"
        android:textColor="#D4AC0D"/>

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:src="@drawable/st"
        android:layout_marginTop="16dp"
        android:layout_below="@id/god-of-cricket"/>

    <TextView
        android:id="@+id/mir"
        android:text="MOST INTERNATIONAL RUNS"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/image"
        android:textColor="#E5E7E9"
        android:textSize="25sp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/mic"
        android:text="MOST INTERNATIONAL CENTURIES"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/mir"
        android:textColor="#E5E7E9"
        android:textSize="25sp"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/mtm"
        android:text="MOST TEST MATCHES"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/mic"
        android:textColor="#E5E7E9"
        android:textSize="25sp"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="10dp"/>
    
    <TextView
        android:id="@+id/runs"
        android:text="34357"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:textColor="#D4AC0D"
        android:layout_toRightOf="@id/mir"
        android:layout_below="@id/image"
        android:layout_marginTop="28dp" />

    <TextView
        android:id="@+id/cent"
        android:text="100"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:textColor="#D4AC0D"
        android:layout_toRightOf="@id/mic"
        android:layout_below="@id/runs"
        android:layout_marginTop="55dp" />

    <TextView
        android:text="200"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:textColor="#D4AC0D"
        android:layout_toRightOf="@id/mtm"
        android:layout_below="@id/cent"
        android:layout_marginTop="58dp" />



</RelativeLayout>